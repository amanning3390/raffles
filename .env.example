################################################################################
# REQUIRED ENVIRONMENT VARIABLES
################################################################################
# These variables are required for the application to function properly.
# Copy this file to .env.local and fill in the values.

# ============================================================================
# Base Blockchain Configuration (REQUIRED)
# ============================================================================
# Chain ID for the Base network
# - 8453: Base mainnet (production)
# - 84532: Base Sepolia testnet (development/testing)
NEXT_PUBLIC_CHAIN_ID=8453

# Alchemy API Key (REQUIRED)
# Used for RPC connections to Base blockchain
# Get your API key from: https://www.alchemy.com/
# 1. Sign up for a free account
# 2. Create a new app for Base or Base Sepolia
# 3. Copy the API key from your app dashboard
# Note: The application uses Alchemy as the primary RPC provider with automatic
# fallback to public Base RPC endpoints for reliability. If Alchemy is unavailable,
# the app will automatically use public endpoints (mainnet.base.org, sepolia.base.org)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# ============================================================================
# OnchainKit Configuration (REQUIRED)
# ============================================================================
# Coinbase Developer Platform API Key (REQUIRED)
# Used for OnchainKit features (wallet, identity, transactions)
# Get your API key from: https://portal.cdp.coinbase.com/
# 1. Sign in with your Coinbase account
# 2. Create a new project
# 3. Generate an API key for your project
NEXT_PUBLIC_CDP_API_KEY=your_coinbase_developer_platform_key_here

# OnchainKit Project Name
# Displayed in wallet connection UI
NEXT_PUBLIC_ONCHAINKIT_PROJECT_NAME=Raffles

# ============================================================================
# WalletConnect Configuration (REQUIRED)
# ============================================================================
# WalletConnect Project ID (REQUIRED)
# Used for WalletConnect v2 wallet connections
# Get your project ID from: https://cloud.walletconnect.com/
# 1. Sign up for a free account
# 2. Create a new project
# 3. Copy the Project ID from your project dashboard
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ============================================================================
# Smart Contract Configuration (REQUIRED)
# ============================================================================
# RaffleCore contract address (REQUIRED)
# This is the main raffle contract deployed on Base
# Deploy the contract first using: cd contracts && ./deploy.sh
# Then copy the deployed contract address here
NEXT_PUBLIC_RAFFLE_CORE_ADDRESS=

# RaffleFactory contract address (OPTIONAL)
# Used if you have a factory pattern for creating raffles
NEXT_PUBLIC_RAFFLE_FACTORY_ADDRESS=

# ============================================================================
# Application URL (REQUIRED)
# ============================================================================
# The URL where your application is hosted
# - Development: http://localhost:3000
# - Production: https://your-domain.com
# Vercel will set this automatically in production
NEXT_PUBLIC_APP_URL=http://localhost:3000

################################################################################
# OPTIONAL ENVIRONMENT VARIABLES
################################################################################
# These variables enable additional features but are not required for core
# functionality. The application will work without them.

# ============================================================================
# Neynar (Farcaster) Configuration (OPTIONAL)
# ============================================================================
# Neynar API Key (OPTIONAL)
# Used for Farcaster integration (SIWN authentication, user profiles)
# Get your API key from: https://neynar.com/
# 1. Sign up for a Neynar account
# 2. Create a new app
# 3. Copy the API key from your app settings
# Note: Both NEYNAR_API_KEY and NEXT_PUBLIC_NEYNAR_CLIENT_ID are required
# for Farcaster features to work. If either is missing, Farcaster features
# will be disabled and the app will work in wallet-only mode.
NEYNAR_API_KEY=your_neynar_api_key_here
NEXT_PUBLIC_NEYNAR_CLIENT_ID=your_neynar_client_id_here

# ============================================================================
# Basescan API Configuration (OPTIONAL)
# ============================================================================
# Basescan API Key (OPTIONAL)
# Used for contract verification on Basescan
# Get your API key from: https://basescan.org/myapikey
# 1. Sign up for a Basescan account
# 2. Go to API Keys section
# 3. Create a new API key
BASESCAN_API_KEY=your_basescan_api_key_here

# ============================================================================
# Database Configuration (OPTIONAL)
# ============================================================================
# Vercel Postgres - Auto-provisioned by Vercel
# These variables are automatically set by Vercel when you add Postgres storage
# You don't need to set them manually unless using a custom database
# POSTGRES_URL=
# POSTGRES_PRISMA_URL=
# POSTGRES_URL_NON_POOLING=
# POSTGRES_USER=
# POSTGRES_HOST=
# POSTGRES_PASSWORD=
# POSTGRES_DATABASE=

# ============================================================================
# Caching Configuration (OPTIONAL)
# ============================================================================
# Vercel KV (Redis) - Optional, for caching
# These variables are automatically set by Vercel when you add KV storage
# You don't need to set them manually unless using a custom Redis instance
# KV_URL=
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
# KV_REST_API_READ_ONLY_TOKEN=

################################################################################
# ENVIRONMENT-SPECIFIC NOTES
################################################################################
#
# DEVELOPMENT:
# - Use Base Sepolia testnet (NEXT_PUBLIC_CHAIN_ID=84532)
# - Use http://localhost:3000 for NEXT_PUBLIC_APP_URL
# - Get testnet ETH from: https://www.coinbase.com/faucets/base-ethereum-goerli-faucet
#
# PRODUCTION:
# - Use Base mainnet (NEXT_PUBLIC_CHAIN_ID=8453)
# - Use your production domain for NEXT_PUBLIC_APP_URL
# - Ensure all API keys are production keys, not test keys
# - Never commit .env.local or .env.production to version control
#
################################################################################
